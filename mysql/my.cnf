[mysqld]

# slow query
slow_query_log=ON
slow_query_log_file=mysql-slow.log
long_query_time=0.1
min_examined_row_limit=10000
#log_output=TABLE

# general log
general_log=OFF
general_log_file=mysql-general.log

# binlog
log-bin=mysql-bin
binlog_format=mixed
log_slave_update

# error log
log-error=mysql.err

# utf8
default-character-set=utf8
character-set-server=utf8

# storage engine
default-storage-engine=innodb

[client]
default-character-set=utf8

[mysqldump]
default-character-set=utf8

