func! MyPerlSetting  ()
	let s:perlenv  = 'PERL5LIB=\"'. $PERL5LIB .'\"'
	let g:perlomni_perl = escape('env ' . s:perlenv . ' perl', ' \();$|')
	NeoBundleSource
				\ vim-perl
				\ flymake-perl.vim
				\ perldoc-vim
"				\ perlomni.vim
endf

