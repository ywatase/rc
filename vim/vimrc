endf

""""""""""""""""""""""""""""""
" Ruby
func! MyRubySettings()
    compiler ruby
    set autoindent expandtab sw=2 ts=2 sts=2
endf
""""""""""""""""""""""""""""""
" Python
func! MyPythonSettings()
    set autoindent expandtab sw=4 ts=4 sts=4
endf
""""""""""""""""""""""""""""""
" その他
func! MyJavaScriptSettings ()
  set smartindent et sw=2 ts=2 sts=2
endf
func! MyJavaSettings ()
    set makeprg=javac\ %
    set grepprg=java\ `basename\ %\ .java`
    set smartindent et
endf

