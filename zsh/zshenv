# zmodload zsh/zprof && zprof
setopt no_global_rcs
source $HOME/.zsh/zshenv.functions

MANPATH=
export MANPATH=`manpath`
export GISTY_DIR=$HOME/dev/gists

# brew
if whence -p /usr/local/bin/brew >/dev/null ; then
	path=(/usr/local/bin(N-/) /usr/local/sbin(N-/) $path)
	# tuning
	# /usr/local/opt/coreutils = $(brew --prefix coreutils)
	path=(/usr/local/opt/coreutils/libexec/gnubin(N-/) $path)
fi

# android sdk
path=(/usr/local/ec2-api-tools/bin(N-/) $HOME/eclipse(N-/) $HOME/android-sdk(N-/) $path)

# git-tasukete
path=($HOME/.zsh/git-tasukete.git(N-/) $HOME/android-sdk(N-/) $path)

for xxenv in rbenv pyenv plenv ndenv phpenv
do
	path=($HOME/.$xxenv/shims(N-/) $HOME/.$xxenv/bin(N-/) $path)
done

# php composer
path=($HOME/.composer/vendor/bin(N-/) $path)

# pythonbrew
[[ -s "$HOME/.pythonbrew/etc/bashrc" ]] && source "$HOME/.pythonbrew/etc/bashrc"

# perlbrew
whence -p plenv >/dev/null || set_perlbrew_env

# go
export GOPATH=$HOME/go
path=($HOME/go/bin(N-/) $path)

path=($HOME/bin/*(N-/) $HOME/bin(N-/) $path)

# awsenv
if whence -p awsenv >/dev/null ; then
  setaws () {
    [[ $# -gt 0 ]] && eval "$(awsenv $@)"
  }
fi

typeset -U path
# if (which zprof > /dev/null) ;then
#     zprof | less
# fi

