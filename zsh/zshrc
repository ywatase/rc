ec2_get_metadata () {
  curl -s http://169.254.169.254/latest/meta-data/
}

r() {
  local f
  f=(~/.zsh/functions/*(.))
  unfunction $f:t 2> /dev/null
  autoload -U $f:t
  compinit -u
}

